
@{
    Layout = null;
    int sayac=0;
}
@model IEnumerable<HaberPortalı.Models.Goru>
<aside id="block_opinions" class="content">
    <ul>
        @foreach (var item in Model)
        {
            <li @if(sayac==Model.Count()-1){
                    Write("calss='last'");
                    sayac++;
                }>
                <article>
                    <div class="photo"><a href="/Yazar/YazarDetay/@item.Kullanıcı.Yazar.Adi @item.Kullanıcı.Yazar.Soyadi/@item.Id">
                        <img src="@item.Kullanıcı.Yazar.Resimyol" alt="Photo" /></a></div>
                    <div class="details">
                        <h4 class="title"><a href="/Gorus/GorusGoster/@item.Baslik/@item.Id">@item.Baslik.</a></h4>
                        <p class="date">
                            <time datetime="@item.GorusTarihi.ToShortDateString()">@item.GorusTarihi.ToString("dd MMMM yyyy")</time>
                            <span class="comments_count"><a href="#">@item.Yorums.Count()</a></span>
                        </p>
                    </div>
                    <p class="text">@if (item.Icerik.Length > 100)
                                    {
                                        @item.Icerik.Substring(0,100)
                                        Write("...");
                                    }
                                    else
                                    {
                                        @item.Icerik
                                    }
                    </p>
                    <p class="text"><a href="/Gorus/GorusGoster/@item.Baslik/@item.Id" class="view_all"><span><span>Tümü Oku</span></span></a></p>
                </article>
            </li>
        }
      
        <li class="last">
            <article>
                <div class="photo"><a href="#"><img src="images/content/opinions_2.jpg" alt="Photo" /></a></div>
                <div class="details">
                    <h4 class="title"><a href="#">Quisque diam lorem, interdum vitae, dapibus ac..</a></h4>
                    <p class="date">
                        <time datetime="2012-01-24">Jan 24, 2012</time>
                        <span class="comments_count"><a href="#">19</a></span>
                    </p>
                </div>
                <p class="text">Sed laoreet aliquam leo. Ut tellus tellus dolor, dapibus eget, elementum vel, cursus eleifend, elit. Aenean auctor wisi et urna...</p>
                <p class="text"><a href="#" class="view_all"><span><span>Read More</span></span></a></p>
            </article>
        </li>
    </ul>
</aside>